{
  "root": "apps/surfboard-api",
  "sourceRoot": "apps/surfboard-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@rester/nx:tscbuild",
      "options": {
        "assets": [
          "apps/surfboard-api/prisma/schema.prisma",
          "apps/surfboard-api/.env",
          "apps/surfboard-api/Dockerfile",
          "apps/surfboard-api/package.json",
          "apps/surfboard-api/README.md",
          "apps/surfboard-api/assets"
        ],
        "tsconfigPath": "apps/surfboard-api/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "tsconfig": {
            "compilerOptions": {
              "declaration": false,
              "sourceMap": false
            }
          },
          "fileReplacements": [
            {
              "replace": "apps/surfboard-api/src/environments/environment.ts",
              "with": "apps/surfboard-api/src/environments/environment.prod.ts"
            },
            {
              "replace": "apps/surfboard-api/prisma/schema.prisma",
              "with": "apps/surfboard-api/prisma/schema.prod.prisma"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@rester/nx:serve",
      "options": {
        "buildTarget": "surfboard-api:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "surfboard-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/surfboard-api/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/surfboard-api"
      ],
      "options": {
        "jestConfig": "apps/surfboard-api/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
